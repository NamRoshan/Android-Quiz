<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DevelopersProfile"
    android:background="@drawable/quickbackground"
    android:orientation="vertical">
    <TextView
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Developer Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
        app:cardCornerRadius="20dp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/roshan"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Roshan Deuba"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/newlightGray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="BCA 8" />
            </LinearLayout>
    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:cardCornerRadius="20dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:src="@drawable/balkrishna"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    />
                <TextView
                    android:text="Balkrishna Bhatta"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_margin="10dp"
                    android:background="@color/newlightGray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:padding="5dp"
                    android:text="BCA 8"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            app:cardCornerRadius="20dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:src="@drawable/mahesh"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                 />
                <TextView
                    android:text="Mahesh Bhatta"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_margin="10dp"
                    android:background="@color/newlightGray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:padding="5dp"
                    android:text="BCA 8"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:cardCornerRadius="20dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:src="@drawable/kalpana"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    />
                <TextView
                    android:text="Kalpana Air"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_margin="10dp"
                    android:background="@color/newlightGray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:padding="5dp"
                    android:text="BCA 8"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>



</LinearLayout>